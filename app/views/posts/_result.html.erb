<div class='calendar'>
  <% if @posts.present? %>
    <% @posts.each do |post| %>
      <div class='item'>
        <div class='date'>
          <%= post.date.strftime("%Y/%m/%d") %>
        </div>
        <ul class='content'>
          <li class='post-list'>
            <%= post.kibun %>
            （投稿日：<%= post.created_at.strftime("%Y/%m/%d %H:%M") %>）
          </li>
        </ul>
      </div>
    <% end %>
  <% else %>
    投稿がありません
  <% end %>
</div>