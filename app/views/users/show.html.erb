<div class="contents row">
  <%= @nickname %>さんの投稿一覧
  <% @posts.each do |post| %>
    <%# <%= render "calendars/main" %> %>
  <% end %>
  <div class="m-50">
    <p>
      <% if current_user != @user %>
        <% if relationship = Relationship.find_by(followed_id: @user.id, following_id: current_user.id) %>
          <%= link_to 'Unfollow', user_relationship_path(@user, relationship), method: :delete, class: "btn-sm btn-danger" %>
        <% else %>
          <%= link_to 'Follow', user_relationships_path(@user), method: :post %>
        <% end %>
      <% end %>
    </p>
  </div>
  <p>
    <%= link_to "#{@user.followeds.count} #{User.human_attribute_name("人をフォローしています（Following）")}", followings_user_path %>
  </p>
  <p>
    <%= link_to "#{@user.followings.count} #{User.human_attribute_name("人にフォローされています（Followed）")}", followeds_user_path %>
  </p>
</div>